<div class="row justify-content-center mx-2 mt-1" id="<%= dom_id product %>">
  <div class="col-1 text-end">
    <%= button_to "Buy!", checkout_create_path, params: {id: product.id}, remote: true, data: { turbo: false },
                  class: "btn btn-success" %>
  </div>

  <div class="col-6 justify-content-between mt-1">
    <div class="row">
      <div class="col-6">
        <strong>Name: </strong> <%= product %>
      </div>

      <div class="col-3">
        <strong>Price: </strong> <%= number_to_currency(product.price/100) %>
      </div>

      <div class="col-3">
        <strong>Sales count: </strong> <%= product.sales_count %>
      </div>
    </div>
  </div>

  <div class="col-5 text-end">
    <%= link_to "Show", product_path(product), class: "btn btn-primary" %>
    <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %>
    <%= link_to "Delete", product_path(product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "btn btn-danger" %>
  </div>
</div>
