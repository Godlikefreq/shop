<div class="row justify-content-center mx-2 mt-1 text-center" id="<%= dom_id product %>">
  <div class="col-1 text-end">
    <%= link_to "Buy!", checkout_create_path, params: {id: product.id}, remote: true, data: { turbo_method: :post },
                  class: "btn btn-success" %>
  </div>

  <div class="col-6 text-start mt-1">
    <strong>Name: </strong> <%= product %>
    <strong>Price: </strong> <%= product.price %>
  </div>

  <div class="col-5">
    <%= link_to "Show", product_path(product), class: "btn btn-primary" %>
    <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %>
    <%= link_to "Delete", product_path(product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "btn btn-danger" %>
  </div>
</div>
